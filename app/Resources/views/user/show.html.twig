{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <article class="col-md-12">
        <div class="page-header">
                <a href="{{ path('user_index') }}" class="btn btn-success pull-right">Retour</a>
            <h1>{{ user }}</h1>
        </div>
        <div class="well">
            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary">Modifier</a>
            {% if user.appointments|length > 0 %}
                <a href="{{ path('user_historic', { 'id': user.id }) }}" class="btn btn-primary">Voir son suivi</a>
            {% endif %}
            <hr />

            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Adresse Mail</th>
                        <td>{{ user.mail }}</td>
                    </tr>
                    <tr>
                        <th>Numéro de téléphone</th>
                        <td>{{ user.phonenumber }}</td>
                    </tr>
                    <tr>
                        <th>Commentaire</th>
                        <td>{{ user.commentary }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>
</div>
{% endblock %}
