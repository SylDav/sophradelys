{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <article class="col-md-12">
        <div class="page-header">
            {% for user in appointment.users %}
                <a href="{{ path('user_historic', {'id': user.id}) }}" class="btn btn-success pull-right">Retour</a><br />
                {% if appointment.date != null %}
                    <h1>Finaliser le rendez-vous de &laquo; {{ user }} &raquo; du {{ appointment.date|date('d/m/Y') }} à {{ appointment.date|date('H:i') }}</h1>
                {% else %}
                    <h1>Modifier la séance de &laquo; {{ user }} &raquo;</h1>
                {% endif %}
              {% endfor %}
        </div>
        <div class="well">

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <br />
                {% if appointment.date != null %}
                    <input class="btn btn-success" type="submit" value="Valider la séance et envoyer un mail" />
                {% endif %}
                <input class="btn btn-success" type="submit" value="Confirmer les changements" />
            {{ form_end(edit_form) }}

        </div>
    </article>
</div>
{% endblock %}
