{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <article class="col-md-12">
        <div class="page-header">
            <h1>Liste des types de rendez-vous</h1>
        </div>
        <div class="well">
            <a href="{{ path('appointmenttype_new') }}" class="btn btn-primary">Ajouter un nouveau type de rendez-vous</a>

            <hr />

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Durée</th>
                        <th>Couleur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for appointmentType in appointmentTypes %}
                    <tr>
                        <td><a href="{{ path('appointmenttype_show', { 'id': appointmentType.id }) }}">{{ appointmentType.id }}</a></td>
                        <td>{{ appointmentType.name }}</td>
                        <td>{{ appointmentType.time }}</td>
                        <td>{{ appointmentType.color }}</td>
                        <td class="btn-group">
                            <a href="{{ path('appointmenttype_edit', { 'id': appointmentType.id }) }}" class="btn btn-default btn-xs">Éditer</a>
                            <a href="{{ path('appointmenttype_delete', { 'id': appointmentType.id }) }}" class="btn btn-default btn-xs">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </article>
</div>
{% endblock %}
