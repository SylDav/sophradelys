{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <article class="col-md-12">
            <div class="page-header">
                <h1>Liste des horaires</h1>
            </div>
            <div class="well">
                <a href="{{ path('schedule_new') }}" class="btn btn-primary">Ajouter un nouvel horaire</a>

                <hr />

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Horaire</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for schedule in schedules %}
                        <tr>
                            <td>{{ schedule.time|date("H:i") }}</td>
                            <td class="btn-group">
                                <a href="{{ path('schedule_show', { 'id': schedule.id }) }}" class="btn btn-default btn-xs">Voir</a>
                                <a href="{{ path('schedule_edit', { 'id': schedule.id }) }}" class="btn btn-default btn-xs">Modifier</a>
                                <a href="{{ path('schedule_delete', { 'id': schedule.id }) }}" class="btn btn-default btn-xs">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </article>
    </div>
{% endblock %}
