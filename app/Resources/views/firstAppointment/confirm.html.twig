{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <article class="col-md-12">
            <div class="page-header">
                <a href="{{ path('firstAppointment_index') }}" class="btn btn-success pull-right">Retour</a> <br />
                <h1>Vous êtes sur le point de prendre un RDV pour le {{ appointment.date|date('d/m/Y') }} à {{ appointment.date|date('H:i') }}</h1>
                <br />
                <h2>Si vous souhaitez le confirmer, merci de remplir le formulaire ci-dessous</h2>
            </div>
            <div class="well">

                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input class="btn btn-success" type="submit" value="Ajouter" />
                {{ form_end(form) }}
            </div>
        </article>
    </div>
{% endblock %}
